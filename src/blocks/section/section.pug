//- Все примеси в этом файле должны начинаться c имени блока (section)

mixin section(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +section('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' section--' + modsList[i].trim();
      }
    }

  section.section(class=allMods)&attributes(attributes)
    .section__inner
      .section__title
        block title
      .section__subtitle
        block subtitle
      .section__content
        block sectionContent
