//- Все примеси в этом файле должны начинаться c имени блока (gallery)

mixin gallery(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +gallery('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' gallery--' + modsList[i].trim();
      }
    }

  .gallery(class=allMods)&attributes(attributes)
    .gallery__inner
      +owl-carousel('gallery')
        div.gallery-item
          img(src='../img/photo-1.jpg', alt='ИнертГаз')
        div.gallery-item
          img(src='../img/photo-2.jpg', alt='ИнертГаз')
        div.gallery-item
          img(src='../img/photo-3.jpg', alt='ИнертГаз')
        div.gallery-item
          img(src='../img/photo-4.jpg', alt='ИнертГаз')
        div.gallery-item
          img(src='../img/photo-5.jpg', alt='ИнертГаз')
        div.gallery-item
          img(src='../img/photo-6.jpg', alt='ИнертГаз')
    .gallery__controls
      span.js-control-prev.gallery__controls-prev
        svg(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 31.494 31.494' width=30 height=27)
          path(d='M10.273 5.01c.444-.445 1.143-.445 1.587 0 .43.428.43 1.142 0 1.57l-8.047 8.047h26.554c.62 0 1.127.492 1.127 1.11 0 .62-.508 1.128-1.127 1.128H3.813l8.047 8.032c.43.444.43 1.16 0 1.587-.444.444-1.143.444-1.587 0L.32 16.532c-.428-.43-.428-1.143 0-1.57l9.953-9.953z', fill='#00a7dd')
